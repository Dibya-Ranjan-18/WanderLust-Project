<style>
 
  .navbar {
    background-color: white !important;
    padding: 0.6rem 1rem;
    border-bottom: 1px solid #ebebeb;
  }
  
  .navbar-brand i {
    color: #fe424d;
    font-size: 2rem;
  }

  
  .search-container {
    display: flex;
    align-items: stretch;
    width: 100%;
    max-width: 450px;
  }

  .search-inp {
    border-radius: 4px 0 0 4px !important;
    border: 1px solid #ced4da !important;
    border-right: none !important;
    padding: 0.5rem 1rem !important;
    height: 42px;
    box-shadow: none !important;
  }

  .btn-search {
    background-color: #fe424d !important;
    color: white !important;
    border-radius: 0 4px 4px 0 !important;
    width: 55px;
    height: 42px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #fe424d !important;
    transition: 0.2s ease-in-out;
  }

  .btn-search:hover {
    background-color: #d93943 !important;
  }

  
  @media (min-width: 768px) {
    .nav-link {
      margin: 0 0.5rem;
      color: #222222 !important;
      font-weight: 500;
    }
    .offcanvas { display: none !important; }
  }

  @media (max-width: 767.98px) {
    .desktop-nav { display: none !important; }
    
    .offcanvas-body .navbar-nav {
      display: flex !important;
      flex-direction: column !important;
    }

    .offcanvas-body .nav-link {
      padding: 0.8rem 0 !important;
      border-bottom: 1px solid #f0f0f0;
    }

    .mobile-search-container {
      display: flex !important;
      align-items: stretch;
      width: 100%;
      margin-bottom: 1.5rem;
    }
    
    .mobile-search-container .search-inp {
      flex-grow: 1;
      border-radius: 4px 0 0 4px !important;
    }
    
    .mobile-search-container .btn-search {
      border-radius: 0 4px 4px 0 !important;
    }
  }
</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">

    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="desktop-nav collapse navbar-collapse d-md-flex justify-content-between align-items-center w-100">
      
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="flex-grow-1 d-flex justify-content-center px-3">
        <form class="search-container" role="search" action="/listings/search" method="GET">
          <input class="form-control search-inp" type="search" name="q" placeholder="Search destinations" required>
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
      </div>

      <div class="navbar-nav">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } else { %>
          <a class="nav-link d-flex align-items-center" href="/profile">
            <i class="fa-solid fa-circle-user fs-4 me-1"></i>
            <span>Profile</span>
          </a>
          <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
      <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">WanderLust</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
      </div>
      
      <div class="offcanvas-body">
        <form class="mobile-search-container" role="search" action="/listings/search" method="GET">
          <input class="form-control search-inp" type="search" name="q" placeholder="Search..." required>
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>

        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
          <hr>
          <% if(!currUser) { %>
            <a class="nav-link" href="/signup">Sign Up</a>
            <a class="nav-link" href="/login">Log In</a>
          <% } else { %>
            <a class="nav-link" href="/profile">My Profile</a>
            <a class="nav-link" href="/logout">Log Out</a>
          <% } %>
        </div>
      </div>
    </div>

  </div>
</nav>