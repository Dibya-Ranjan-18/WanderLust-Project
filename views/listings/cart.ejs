<% layout("/layouts/boilerplate.ejs") %>

<style>
    /* Adding the missing Coral button style */
    .btn-coral {
        background-color: #fe424d !important;
        color: white !important;
        border: none !important;
        transition: 0.3s ease-in-out !important;
    }

    .btn-coral:hover {
        background-color: #d93943 !important;
        box-shadow: 0 4px 12px rgba(254, 66, 77, 0.3);
    }

    /* Styling the Secure Transaction section */
    .secure-text {
        color: #717171;
        font-size: 0.85rem;
    }

    /* Making the image look consistent with the screenshot */
    .cart-img {
        height: 110px;
        width: 100%;
        object-fit: cover;
        border-radius: 12px !important;
    }

    .price-details-card {
        border: 1px solid #dddddd !important;
        border-radius: 16px !important;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <h2 class="fw-bold mb-4">
                <i class="fa-solid fa-cart-shopping me-2"></i>Your Cart
            </h2>

            <% if (cartItems.length === 0) { %>
                <div class="card p-5 text-center shadow-sm border-0 rounded-4">
                    <div class="card-body">
                        <i class="fa-solid fa-plane-departure fs-1 text-muted mb-3"></i>
                        <h4 class="text-secondary">Your cart is feeling a bit light!</h4>
                        <p class="text-muted">Looks like you haven't picked any destinations yet.</p>
                        <a href="/listings" class="btn btn-coral mt-3 px-4">Go Explore Destinations</a>
                    </div>
                </div>
            <% } else { %>
                <div class="row g-4">
                    <div class="col-md-7 col-lg-8">
                        <% for(let item of cartItems) { %>
                            <div class="card mb-3 shadow-sm border-0 p-3 rounded-4">
                                <div class="row g-0 align-items-center">
                                    <div class="col-4">
                                        <img src="<%= item.listing.image.url %>" class="cart-img" alt="listing_image">
                                    </div>
                                    <div class="col-8">
                                        <div class="card-body py-0 ps-3">
                                            <h5 class="fw-bold text-dark mb-1"><%= item.listing.title %></h5>
                                            <p class="text-muted small mb-2">
                                                <i class="fa-regular fa-calendar me-1"></i> <%= item.checkIn %> — <%= item.checkOut %>
                                            </p>
                                            <p class="fw-bold text-danger fs-5 mb-0">₹<%= item.listing.price.toLocaleString("en-IN") %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <div class="col-md-5 col-lg-4">
                        <div class="card p-4 shadow-sm price-details-card sticky-top" style="top: 100px;">
                            <h5 class="fw-bold mb-4">Price Details</h5>
                            
                            <% 
                               let total = 0;
                               for(let item of cartItems) {
                                   total += item.listing.price;
                               }
                            %>

                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-secondary">Total Price</span>
                                <span>₹<%= total.toLocaleString("en-IN") %></span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-secondary">Service Fee</span>
                                <span class="text-success">FREE</span>
                            </div>
                            <hr class="text-muted">
                            <div class="d-flex justify-content-between mb-4">
                                <span class="fw-bold fs-5">Amount Payable</span>
                                <span class="fw-bold fs-5 text-dark">₹<%= total.toLocaleString("en-IN") %></span>
                            </div>

                            <button id="checkout-button" class="btn btn-coral w-100 py-3 fw-bold rounded-3">
                                Proceed to Payment
                            </button>
                            
                            <div class="text-center secure-text mt-3">
                                <i class="fa-solid fa-lock me-1"></i> Secure Transaction
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
    const checkoutBtn = document.getElementById('checkout-button');

    if(checkoutBtn) {
        checkoutBtn.addEventListener('click', () => {
            // UI Feedback
            checkoutBtn.innerHTML = `<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Securing your stay...`;
            checkoutBtn.disabled = true;
            checkoutBtn.classList.replace('btn-coral', 'btn-secondary');

            // Simulate Delay
            setTimeout(() => {
                window.location.href = "/success";
            }, 3000); 
        });
    }
</script>